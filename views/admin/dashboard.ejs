<link rel="stylesheet" href="/stylesheets/dashboard.css">

<div class="container mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="admin-container">
        <!-- ‚úÖ ÏÇ¨Ïù¥ÎìúÎ∞î -->
        <div class="sidebar">
            <h4>Í¥ÄÎ¶¨ Î©îÎâ¥</h4>
            <button id="review-btn" class="btn btn-primary w-100 my-2">Î¶¨Î∑∞ Í¥ÄÎ¶¨</button>
            <button id="user-btn" class="btn btn-secondary w-100 my-2">Ïú†Ï†Ä Í¥ÄÎ¶¨</button>
            <button id="report-btn" class="btn btn-danger w-100 my-2">Ïã†Í≥† Í¥ÄÎ¶¨</button>
        </div>

        <div class="content">
            <!-- ‚úÖ Í≤ÄÏÉâ & Ï†ïÎ†¨ -->
            <form method="GET" action="/admin/dashboard" class="mb-3">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" value="<%= search || '' %>" placeholder="Í≤ÄÏÉâÏñ¥ ÏûÖÎ†•">
                    <select name="type" class="form-select">
                        <option value="reviews" <%= type === 'reviews' ? 'selected' : '' %>>Î¶¨Î∑∞</option>
                        <option value="users" <%= type === 'users' ? 'selected' : '' %>>Ïú†Ï†Ä</option>
                        <option value="reports" <%= type === 'reports' ? 'selected' : '' %>>Ïã†Í≥†</option>
                    </select>
                    <select name="sort" class="form-select">
                        <option value="newest">ÏµúÏã†Ïàú</option>
                        <option value="oldest" <%= sort === 'oldest' ? 'selected' : '' %>>Ïò§ÎûòÎêúÏàú</option>
                        <option value="a-z" <%= sort === 'a-z' ? 'selected' : '' %>>Ïù¥Î¶ÑÏàú</option>
                    </select>
                    <button type="submit" class="btn btn-dark">Í≤ÄÏÉâ</button>
                </div>
            </form>

            <!-- ‚úÖ Î¶¨Î∑∞ Î™©Î°ù -->
            <div id="reviews-section" class="<%= type === 'reviews' ? '' : 'hidden' %>">
                <h2>All Reviews</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Book Title</th>
                            <th>Author</th>
                            <th>Content</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reviews.forEach(review => { %>
                            <tr>
                                <td><%= review.book ? review.book.title : "Unknown" %></td>
                                <td><%= review.author.username %> (<%= review.author.email %>)</td>
                                <td class="break-word"><%= review.body %></td>
                                <td>
                                    <form action="/admin/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!-- ‚úÖ ÌéòÏù¥Ïßï -->
                <ul class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="<%= page === i ? 'active' : '' %>">
                            <a href="/admin/dashboard?type=reviews&page=<%= i %>&search=<%= search %>&sort=<%= sort %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <!-- ‚úÖ Ïú†Ï†Ä Î™©Î°ù -->
            <div id="users-section" class="<%= type === 'users' ? '' : 'hidden' %>">
                <h2>All Users</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.isAdmin ? "Admin" : "User" %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!-- ‚úÖ Ïú†Ï†Ä Î™©Î°ù ÌéòÏù¥Ïßï -->
                <ul class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="<%= page === i ? 'active' : '' %>">
                            <a href="/admin/dashboard?type=users&page=<%= i %>&search=<%= search %>&sort=<%= sort %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <!-- ‚úÖ Ïã†Í≥† Î™©Î°ù -->
            <div id="reports-section" class="<%= type === 'reports' ? '' : 'hidden' %>">
                <h2>Reported Reviews</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Reported By</th>
                            <th>Review Content</th>
                            <th>Report Reason</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reports.forEach(report => { %>
                            <tr>
                                <td><%= report.reportedBy.username %> (<%= report.reportedBy.email %>)</td>
                                <td class="break-word"><%= report.review.body %></td>
                                <td class="break-word"><%= report.reason %></td>
                                <td>
                                    <div class="report-actions">
                                        <form action="/admin/reports/<%= report._id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="btn delete-report-btn btn-sm">
                                                üö® Delete
                                            </button>
                                        </form>
                                        <form action="/admin/reviews/<%= report.review._id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="btn delete-review-btn btn-sm mt-2">
                                                üìù Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>

                <!-- ‚úÖ ÌéòÏù¥Ïßï -->
                <ul class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="<%= page === i ? 'active' : '' %>">
                            <a href="/admin/dashboard?type=reports&page=<%= i %>&search=<%= search %>&sort=<%= sort %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/adminDashboard.js"></script>


